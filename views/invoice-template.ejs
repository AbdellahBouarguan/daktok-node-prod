<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Invoice for Order #<%= order.id %></title>
    <style>
      body {
        font-family: sans-serif;
      }
      .invoice-box {
        max-width: 800px;
        margin: auto;
        padding: 30px;
        border: 1px solid #eee;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.15);
        font-size: 16px;
        line-height: 24px;
      }
      .invoice-box table {
        width: 100%;
        line-height: inherit;
        text-align: left;
      }
      .invoice-box table td {
        padding: 5px;
        vertical-align: top;
      }
      .invoice-box table tr.heading td {
        background: #eee;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
      }
      .invoice-box table tr.item td {
        border-bottom: 1px solid #eee;
      }
      .total {
        font-weight: bold;
        text-align: right;
      }
      .payment-link {
        text-align: center;
        margin-top: 30px;
      }
      .payment-link a {
        display: inline-block;
        padding: 10px 20px;
        background-color: #3b82f6;
        color: white;
        text-decoration: none;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="invoice-box">
      <h1>Invoice #<%= order.id %></h1>
      <p>
        Billed To: <%= order.customer_name %><br />
        <%= order.customer_email %>
      </p>
      <table>
        <tr class="heading">
          <td>Item</td>
          <td>Quantity</td>
          <td>Price</td>
        </tr>
        <% order.items.forEach(item => { %>
        <tr class="item">
          <td><%= item.product_name %></td>
          <td><%= item.quantity %></td>
          <td>$<%= item.price.toFixed(2) %></td>
        </tr>
        <% }) %>
        <tr class="total">
          <td></td>
          <td>Total:</td>
          <td>$<%= order.total.toFixed(2) %></td>
        </tr>
      </table>
      <div class="payment-link">
        <a href="http://localhost:3000/payment/<%= order.payment_uuid %>"
          >Click Here to Pay</a
        >
      </div>
    </div>
  </body>
</html>
